{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler", 
    "jsx": "react-jsx",         
    "types": ["vite/client"],    

    "strict": true,             
    "skipLibCheck": true,       
    "baseUrl": ".",             
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // === Archivos Incluidos ===
  "include": ["src", "src/**/*.d.ts"]
}